.param-info{
  padding: 40rpx 30rpx;
  border-bottom: 16rpx solid #f2f2f2;
}
.param-info .size{
  color:#777;
}
.row{
  display: flex;
  height: 84rpx;
  line-height: 84rpx;
  border-bottom: 2rpx solid #f2f2f2;
  /* justify-content: space-around; */
}
.size-item{
  flex: 1;
  margin-right: 42rpx;
}
.param{
  color: #777;
}
.info-row .key{
  width: 160rpx;
}
.info-row .value{
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #f55777;
}