.bottom-bar{
  height: 120rpx;
  /* position: fixed;
  bottom: 0;
  left: 0;
  right: 0; */
  display: flex;
  box-shadow: 0 -2rpx 2rpx rgba(100,100,100,0.2);
  background-color: #fff;
}
.bar-item{
  flex: 1;
  display: flex;
}

.left-item, .right-item{
  flex: 1;
  text-align: center;
}
.left-item{
  padding: 20rpx 0;
}

.image{
  height: 40rpx;
  width: 40rpx;
}
.text{
  font-size: 30rpx;
  color: #777;
  display: block;
}
.bar-right{
  align-items: center;
  font-size: 32rpx;
  line-height: 120rpx;
}
.bar-right .cart{
  color: #ff5777;
  background-color: #ffe817;
}
.bar-right .buy{
  color: #fff;
  background-color: #ff5777;
}